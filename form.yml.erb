<%-
  cmd = "source /etc/profile.d/hpc_software.sh; ls $HPC_SOFTWARE/rstudio-server/"
  begin
    output, status = Open3.capture2e(cmd)
    if status.success?
      rstudio_versions = output.split("\n").map(&:strip).reject(&:blank?).reverse
    else
      raise output
    end
  rescue => e
    rstudio_versions = []
    error = e.message.strip
  end
-%>
<%-
  cmd = "source /etc/profile.d/hpc_software.sh; ls $HPC_SOFTWARE/r/"
  begin
    output, status = Open3.capture2e(cmd)
    if status.success?
      r_versions = output.split("\n").map(&:strip).reject(&:blank?).reverse
    else
      raise output
    end
  rescue => e
    r_versions = []
    error = e.message.strip
  end
-%>
---
cluster: "pomona"
cacheable: false
form:
  - modules
  - extra_jupyter_args
  - pom_partitions
  - pom_num_hours
  - pom_rstudio_versions
  - pom_r_versions
  - apptainer_location
  - pom_num_cores
  - pom_num_memories
  - bc_email_on_started
attributes:
  modules: ""
  extra_jupyter_args: ""
  pom_partitions:
    help: |
      - **amd** - Default partition, you can run up to 720 hours (30 days) per job
      - **short** - Limit to 2 hours, job will start with little to no wait time
    widget: select
    options:
      - [
          'amd', 'amd',
          data-max-pom-num-hours: 720
        ]
      - [
          'short', 'short',
          data-max-pom-num-hours: 2
        ]
  pom_num_hours:
    widget: "number_field"
    label: "Number of hours"
    help: |
      - **short** - max of 2 hours
    value: 1
    min: 1
    max: 720
    required: true
  pom_rstudio_versions:
    label: "Rstudio Version"
    required: true
    widget: select
    options:
    <%- rstudio_versions.each do |q| -%>
      - [ "<%= q %>", "<%= q %>", data-hide-apptainer-location: true ]
    <%- end -%>
      - [ "apptainer", "apptainer", data-hide-pom-r-versions: true ]
  pom_r_versions:
    label: "R Version"
    widget: select
    options:
    <%- r_versions.each do |q| -%>
      - [ "<%= q %>", "<%= q %>"]
    <%- end -%>
  apptainer_location:
    widget: text_field
    help: |
      - example 
      - $HOME/some_path/r.sif
      - ~/some_path/r.sif
      - /full_path/r.sif
  pom_num_cores:
    label: "Number of CPU cores to request"
    widget: "number_field"
    help: |
      CPU cores are in multiple of 2 to optimize performance
    value: 2
    max: 128
    min: 2
    step: 2
    required: true
  pom_num_memories:
    widget: "number_field"
    label: "Memory in G to request"
    value: 1
    max: 500
    min: 1